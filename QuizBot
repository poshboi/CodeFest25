<body>
    <section class="msger">
        <header class="msger-header">
            <div class="msger-header-title">
                <img src="img/logo.png" alt="ChatBot Logo">
            </div>
        </header>
        <main class="msger-chat">
            <div class="msg left-msg">
                <div class="msg-img" style="background-image: url('img/bot_avatar.webp');" alt="BOT Avatar"></div>
                <div class="msg-bubble">
                    <div class="msg-info">
                        <div class="msg-info-name">BOT</div>
                        <div class="msg-info-time">12:00</div>
                    </div>
                    <div class="msg-text">
                        Hi, Welcome to CODE_RED ChatBot! Go ahead and send me a message.
                    </div>
                </div>
            </div>
        </main>
        <form class="msger-inputarea">
            <input type="text" class="msger-input" placeholder="Enter your message..." aria-label="Message Input">
            <button type="submit" class="msger-send-btn" aria-label="Send Message">
                <i class="fa fa-paper-plane"></i>
            </button>
        </form>
    </section>
    <script>
        const msgerForm = document.querySelector(".msger-inputarea");
        const msgerInput = document.querySelector(".msger-input");
        const msgerChat = document.querySelector(".msger-chat");

        const BOT_IMG = "img/bot_avatar.webp";
        const PERSON_IMG = "img/user_avatar.webp";
        const BOT_NAME = "BOT";
        const PERSON_NAME = "USER";

        const responses = {
            hello: [
                "Hi there! How can I assist you today?",
                "Hello! How can I help?",
                "Hey! Need any assistance?"
            ],
            help: [
                "Sure! What do you need help with?",
                "I'm here to help, what can I do for you?",
                "How can I assist you today?"
            ],
            features: [
                "Here are some features: Real-time chat, Custom responses, and AI Assistance!",
                "You can ask me anything, I'm here to assist with various features!",
                "Some of my features include AI Assistance, personalized chat, and more!"
            ],
            chatbot: [
                "I'm CODE_RED ChatBot, your virtual assistant!",
                "I'm here to help as CODE_RED ChatBot!",
                "Meet CODE_RED, your friendly chatbot!"
            ],
            default: [
                "I'm not sure about that. Could you please rephrase?",
                "Sorry, I didn't understand. Could you clarify?",
                "I didn't quite get that. Can you try again?"
            ],
        };

        function getResponse(message) {
            const messageLower = message.toLowerCase();
            if (messageLower.includes("hello") || messageLower.includes("hi")) {
                return responses.hello[Math.floor(Math.random() * responses.hello.length)];
            } else if (messageLower.includes("help")) {
                return responses.help[Math.floor(Math.random() * responses.help.length)];
            } else if (messageLower.includes("features")) {
                return responses.features[Math.floor(Math.random() * responses.features.length)];
            } else if (messageLower.includes("chatbot")) {
                return responses.chatbot[Math.floor(Math.random() * responses.chatbot.length)];
            } else {
                return responses.default[Math.floor(Math.random() * responses.default.length)];
            }
        }

        function appendMessage(name, img, side, text) {
            const msgHTML = `
                <div class="msg ${side}-msg">
                    <div class="msg-img" style="background-image: url(${img});" alt="${name} Avatar"></div>
                    <div class="msg-bubble">
                        <div class="msg-info">
                            <div class="msg-info-name">${name}</div>
                            <div class="msg-info-time">${new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })}</div>
                        </div>
                        <div class="msg-text">${text}</div>
                    </div>
                </div>
            `;
            msgerChat.insertAdjacentHTML("beforeend", msgHTML);
            msgerChat.scrollTop = msgerChat.scrollHeight;
        }

        msgerForm.addEventListener("submit", (event) => {
            event.preventDefault();
            const msgText = msgerInput.value.trim();
            if (!msgText) return;

            appendMessage(PERSON_NAME, PERSON_IMG, "right", msgText);
            msgerInput.value = "";

            setTimeout(() => {
                const botResponse = getResponse(msgText);
                appendMessage(BOT_NAME, BOT_IMG, "left", botResponse);
            }, 500);
        });
    </script>
</body>
</html>
